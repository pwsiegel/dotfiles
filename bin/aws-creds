#!/usr/bin/env bash

AWS_CRED_FILE="$HOME/.aws/credentials"

if [ -z ${2+x} ]; then
    profile=default
else
    profile="$2"
fi

if [ $1 == "id" ]; then
    grep "$profile" "$AWS_CRED_FILE" -A 2 | tail -2 | head -1 | awk '{ print "export AWS_ACCESS_KEY_ID=" $NF }' | tr -d "\n" | pbcopy
elif [ $1 == "secret" ]; then
    grep "$profile" "$AWS_CRED_FILE" -A 2 | tail -2 | tail -1 | awk '{ print "export AWS_SECRET_ACCESS_KEY=" $NF }' | tr -d "\n" | pbcopy
fi
